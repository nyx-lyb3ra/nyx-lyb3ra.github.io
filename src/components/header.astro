---
import NyxIcon from "@/icons/nyx.svg";

const links = [
  { label: "home", href: "/" },
  { label: "projects", href: "/projects" },
  { label: "devlog", href: "/devlog" },
];

const { pathname } = Astro.url;

const normalize = (path: string) => path.replace(/\/$/, "") || "/";
const currentPath = normalize(pathname);

function isCurrent(href: string) {
  const normalizedHref = normalize(href);
  if (normalizedHref === "/") return currentPath === "/";
  return currentPath.startsWith(normalizedHref);
}
---

<header class="header">
  <a class="logo-link" href="/" aria-label="Back to home">
    <NyxIcon class="logo-link__logo" />
    <span class="logo-link__text">[nyx]</span>
  </a>

  <nav class="navbar" aria-label="Main navigation">
    <ul class="navbar__list">
      {
        links.map(({ label, href }) => {
          const active = isCurrent(href);

          return (
            <li class="navbar__item">
              <a
                href={href}
                aria-current={active ? "page" : undefined}
                class:list={[
                  "navbar__link",
                  { "navbar__link--active": active },
                ]}
              >
                {label}
              </a>
            </li>
          );
        })
      }
    </ul>
  </nav>
</header>

<style>
  .header {
    display: flex;

    justify-content: flex-start;
    align-items: center;

    padding: var(--spacing-md);
    gap: var(--spacing-sm);

    @container (width >= 20.5rem) {
      justify-content: space-between;
    }
  }

  .logo-link {
    display: flex;
    align-items: center;

    color: inherit;
    text-decoration: none;

    gap: var(--spacing-xs);
  }

  .logo-link__logo {
    color: var(--color-primary);

    width: 1.5rem;
    height: 1.5rem;

    transition: color 200ms var(--curve-fast-out-slow-in);
  }

  .logo-link__text {
    display: none;
    font-weight: 700;
    font-size: 1.25rem;

    @container (width >= 20.5rem) {
      display: block;
    }
  }

  .navbar {
    flex: 1;

    @container (width >= 20.5rem) {
      flex: 0;
    }
  }

  .navbar__list {
    display: flex;
    justify-content: space-evenly;

    list-style-type: none;

    padding: 0;

    @container (width >= 20.5rem) {
      gap: var(--spacing-md);
    }
  }

  .navbar__link {
    color: oklch(from currentcolor l c h / 55%);
    text-decoration: none;
    transition: color 200ms var(--curve-fast-out-slow-in);

    &:hover,
    &.navbar__link--active {
      color: currentcolor;
    }

    &.navbar__link--active {
      text-decoration: underline;
    }
  }
</style>
